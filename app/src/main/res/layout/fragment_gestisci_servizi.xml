<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".GestisciServiziFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titoloRistorante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/fontcorsivo"
                android:gravity="center_horizontal"
                android:text="@string/ristoranteTitle"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaRistorante"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/testoGym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/fontcorsivo"
                android:gravity="center_horizontal"
                android:text="@string/gympass"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaGym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/testoImpianto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:fontFamily="@font/fontcorsivo"
                android:gravity="center_horizontal"
                android:text="@string/impianto_sportivo"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="normal|bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaImpianto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>